<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="403dp"
            android:layout_height="41dp"
            android:text="@string/titulo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.037"
            android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center" android:fontFamily="@font/bowlby_one"
            android:textColor="@android:color/holo_orange_dark" android:id="@+id/textView"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/button2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="88dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toStartOf="@+id/button3" android:layout_marginEnd="12dp"
            android:onClick="clickButton" android:textSize="30sp"
            android:fontFamily="@font/bowlby_one" android:tag="1"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/button8"
            app:layout_constraintStart_toEndOf="@+id/button7"
            android:layout_marginStart="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.272"
            app:layout_constraintBottom_toBottomOf="@+id/button7" app:layout_constraintTop_toTopOf="@+id/button7"
            android:onClick="clickButton" android:tag="6"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/button7"
            app:layout_constraintStart_toEndOf="@+id/button5"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/button5"
            app:layout_constraintTop_toTopOf="@+id/button5"
            android:onClick="clickButton" android:tag="5"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/button5" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button2" android:layout_marginBottom="140dp"
            app:layout_constraintBottom_toTopOf="@+id/button" android:onClick="clickButton" android:tag="4"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/button3" app:layout_constraintStart_toEndOf="@+id/button2"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/button4"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/button2" android:onClick="clickButton"
            android:fontFamily="@font/bowlby_one" android:tag="2"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/button4" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/button3"
            app:layout_constraintBottom_toBottomOf="@+id/button3" android:onClick="clickButton"
            android:fontFamily="@font/bowlby_one" android:tag="3"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/button" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/button5"
            app:layout_constraintEnd_toStartOf="@+id/button6"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.181"
            android:onClick="clickButton" android:tag="7"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/button6" app:layout_constraintEnd_toStartOf="@+id/button9"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/button" android:onClick="clickButton" android:tag="8"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/button9" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/button6" android:onClick="clickButton" android:tag="9"/>

</androidx.constraintlayout.widget.ConstraintLayout>